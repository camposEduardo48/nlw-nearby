{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"]
    },
    "allowJs": true
  },
  "moduleResolution": "node",
  "include": ["src/**/*", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules"]
}
